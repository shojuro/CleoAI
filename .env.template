# CleoAI Environment Configuration Template
# Copy this file to .env and fill in your values
# WARNING: Never commit .env file to version control!

# ============================================
# SECRETS MANAGEMENT
# ============================================
# Provider: env, aws, vault, azure
SECRETS_PROVIDER=env

# AWS Secrets Manager (if using aws provider)
# AWS_DEFAULT_REGION=us-east-1
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key

# HashiCorp Vault (if using vault provider)
# VAULT_ADDR=http://localhost:8200
# VAULT_TOKEN=your-vault-token

# Azure Key Vault (if using azure provider)
# AZURE_KEY_VAULT_URL=https://your-vault.vault.azure.net/

# ============================================
# API CONFIGURATION
# ============================================
# JWT secret for API authentication (generate with: openssl rand -hex 32)
JWT_SECRET_KEY=your-secret-jwt-key-here

# API Key for service-to-service auth
API_KEY=your-api-key-here

# Allowed CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Environment: development, staging, production
ENVIRONMENT=development

# ============================================
# DATABASE CREDENTIALS
# ============================================
# MongoDB
MONGO_ROOT_USERNAME=cleoai_admin
MONGO_ROOT_PASSWORD=change-this-password
MONGODB_CONNECTION_STRING=mongodb://cleoai_admin:change-this-password@localhost:27017/

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change-this-redis-password

# Supabase (if using)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-key

# Pinecone (if using)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# ============================================
# MONITORING & OBSERVABILITY
# ============================================
# Sentry
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# OpenTelemetry
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4318
OTEL_SERVICE_NAME=cleoai
OTEL_RESOURCE_ATTRIBUTES=environment=development

# Prometheus
PROMETHEUS_PORT=9090

# ============================================
# MODEL CONFIGURATION
# ============================================
# Hugging Face token (for private models)
HUGGINGFACE_TOKEN=your-hf-token

# Model cache directory
MODEL_CACHE_DIR=./models

# ============================================
# FEATURE FLAGS
# ============================================
# Enable distributed backends
USE_REDIS=true
USE_MONGODB=true
USE_SUPABASE=false
USE_PINECONE=false

# Legacy backends (for migration)
USE_SQLITE=false
USE_CHROMADB=false

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/cleoai.log

# ============================================
# PERFORMANCE
# ============================================
# Worker settings
WEB_CONCURRENCY=4
MAX_WORKERS=8
WORKER_TIMEOUT=120

# Cache settings
CACHE_TTL=300
MAX_CACHE_SIZE=1000

# ============================================
# SECURITY
# ============================================
# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_PER_HOUR=1000

# Session settings
SESSION_LIFETIME_HOURS=24
SESSION_SECURE_COOKIE=true

# ============================================
# BACKUP & RECOVERY
# ============================================
# Backup settings
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=cleoai-backups

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Debug mode (NEVER enable in production)
DEBUG=false

# Development tools
ENABLE_PLAYGROUND=false
ENABLE_INTROSPECTION=false