# CleoAI Environment Configuration
# Local Development Settings - Update for production use

# Redis Configuration (Local Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
# REDIS_PASSWORD=  # Uncomment and set for production

# MongoDB Configuration (Local Docker)
MONGODB_CONNECTION_STRING=mongodb://localhost:27017/cleoai

# Supabase Configuration
# Create a free project at https://supabase.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here

# Pinecone Configuration
# Get API key from https://app.pinecone.io
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1

# Memory Backend Flags
USE_REDIS=true
USE_MONGODB=true
USE_SUPABASE=false  # Set to true after configuring Supabase
USE_PINECONE=false  # Set to true after configuring Pinecone

# Legacy Backend Flags (for gradual migration)
USE_SQLITE=true
USE_CHROMADB=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true  # Set to false in production

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/cleoai.log

# Performance Settings
REDIS_TTL_MINUTES=60
MONGODB_ARCHIVE_DAYS=90
MAX_MEMORY_RESULTS=100